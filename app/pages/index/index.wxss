/**index.wxss**/

.page {
  background: #e9e9e9;
}

/*轮播-banner  */

.slide-image {
  width: 100%;
  height: 100%;
}

/*type-分类  */

.section {
  margin: 20rpx 0;
}

.flex-wrp {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}

.type-img {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
}

.type-text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

/*推荐  */

.recommend {
  background: #fff;
  padding-bottom: 10rpx;
}

.rmb-title {
  background-image: url(../img/rmb-tit-bgpng.png);
  background-size: 100%;
  text-align: center;
  line-height: 70rpx;
}

.rmb-contenr {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 15rpx;
}

.rmb-left {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40%;
}

.rmb-img {
  width: 240rpx;
  height: 240rpx;
}

.rmb-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  padding-right: 20rpx;
}

.rmb-right-title {
  font-size: 30rpx;
  line-height: 36rpx;
  color: rgb(149, 149, 149);
  padding-top: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}

.rmb-right-content {
  margin-bottom: 10rpx;
}

.price {
  color: rgb(253, 82, 129);
}

.yuyue {
  float: right;
  background: rgb(253, 82, 129);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 14rpx;
  border: 1px solis #fff;
  border-radius: 8rpx;
}

/*tab-选项卡 */

.tab {
  width: 100%;
  background: #fff;
}

.tabList {
  white-space: nowrap;
  display: flex;
}

.tab-item {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  display: inline-block;
  color: #888;
}

.itrmActive {
  color: rgb(81, 187, 182);
  font-size: 30rpx;
  border-bottom: 2px solid rgb(81, 187, 182);
}

/*tabContent-选项卡内容  */

.tabContent {
  width: 100%;
  background: #fff;
  padding-top: 6rpx;
}

/* .tc-center {
} */

.tc-center-list {
  width: 50%;
  display: inline-block;
  margin-bottom: 20rpx;
}

.tc-cente-img {
  display: block;
  width: 320rpx;
  height: 320rpx;
  margin: 0 auto;
}

.tc-cente-text {
  width: 320rpx;
  margin: 0 auto;
}

.tc-title, .tc-price {
  display: inline-block;
  font-size: 24rpx;
}

.tc-title {
  width: 70%;
  color: rgb(81, 81, 81);
}

.tc-price {
  width: 30%;
  color: rgb(253, 82, 129);
  text-align: cntent;
  font-size: 24rpx;
}
.bottomLine{
  background-image: url(../img/bottomLine.jpg);
  background-size: 100%;
  height: 120rpx;
}
.bottomLine2{
  background-image: url(../img/bottomLine2.jpg);
  background-size: 100%;
  height: 120rpx;
}