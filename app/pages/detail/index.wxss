/* pages/detail/index.wxss */

.detail-image {
  width: 720rpx;
  height: 720rpx;
  margin-left: 15rpx;
}

.detailList {
  margin: 20rpx 15rpx;
  border: 1px solid #e9e9e9;
}

.detail-title {
  font-size: 32rpx;
  margin-top: 10rpx;
  padding-left: 5rpx;
}

.detail-info {
  color: #444;
  font-size: 28rpx;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin: 20rpx 0;
  padding-left: 10rpx;
}

.detail-price {
  color: rgb(253, 82, 129);
  font-size: 40rpx;
  margin: 10rpx 0;
  padding-left: 10rpx;
  font-weight: bold;
}

.detailTime {
  margin: 20rpx 15rpx;
  border: 1px solid #e9e9e9;
  padding:10rpx 0;
}

.detail-time, .detail-timer {
  color: #444;
  font-size: 28rpx;
  padding-left: 10rpx;
  margin: 10rpx 0;
}

.order {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: rgb(253, 82, 129);
  color: #fff;
  font-size: 50rpx;
  border-top: 1px solis #e9e9e9;
}
